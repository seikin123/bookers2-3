<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @booknew %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@user) do %>
            <%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= link_to @user.name, user_path(@user) %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <td><%= render 'favorites/favo', book: @book %></td>  <!--いいね機能-->
          <td><%= link_to "コメント数:#{@book.book_comments.count}", book_path(@book.id) %></td>
          <% if @book.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
          <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
        </tr>
      </table>
          <td><%= form_for [@book, @book_comment] do |f| %>
            <%= f.text_area :comment, size: "40x5" %>
            <%= f.submit '送信' %>
            <% end %>
            </td>
            <table>
          <thead>
            <tr>
              <th>コメント投稿者</th>
              <th>コメント内容</th>
            </tr>
          </thead>
          <tbody>
            <% @book_comments.each do |book_comment| %>
              <tr>
                <td><%= link_to user_path(@user) do %>
                  <%= attachment_image_tag book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg" %>
                  <%= link_to book_comment.user.name, user_path(@user) %>
                  <% end %>
                </td>
                <td><%= book_comment.comment %></td>
                <% if book_comment.user_id == current_user.id %>
                <td><%= link_to "削除", book_book_comment_path(@book, book_comment), method: :delete %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>